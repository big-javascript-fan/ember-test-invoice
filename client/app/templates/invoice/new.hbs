<div class="container">
    <form class="form" {{action "createInvoice" on="submit"}}>
        <div class="form-group">
            <label for="amount">Amount</label>
            {{input class="form-control" id="amount" name="amount" type="text" placeholder="Please input amount!" value=model.amount required="true"}}
        </div>
        <div class="form-group">
            <label for="invoiceDate">Invoice Date</label>
            {{input class="form-control" id="invoiceDate" name="invoiceDate" type="date" value=model.createdDate required="true"}}
        </div>
        <div class="form-group">
            {{input type="submit" class="btn btn-warning" value="Create"}}
            {{#link-to "dashboard" class="btn btn-primary"}}
                Cancel
            {{/link-to}}
        </div>
    </form>
</div>