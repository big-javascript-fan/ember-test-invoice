<div class="container">
    <form class="form" {{action "updateInvoice" model on="submit"}}>
        <div class="form-group">
            <label for="amount">Amount</label>
            {{input class="form-control" value=model.amount id="amount" name="amount" type="text" placeholder="Please input amount!" required="true"}}
        </div>
        <div class="form-group">
            <label for="invoiceDate">Invoice Date</label>
            {{input class="form-control" value=model.createdDate id="invoiceDate" name="invoiceDate" type="date" required="true"}}
        </div>
        <div class="form-group">
            {{input type="submit" class="btn btn-warning" value="Save"}}
            {{#link-to "dashboard" class="btn btn-primary"}}
                Cancel
            {{/link-to}}
        </div>
    </form>
</div>